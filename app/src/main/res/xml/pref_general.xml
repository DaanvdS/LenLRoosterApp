<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="lln"
        android:title="@string/pref_title_lln"
        android:defaultValue="@string/pref_default_lln"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="pwd"
        android:title="@string/pref_title_pwd"
        android:defaultValue="@string/pref_default_pwd"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
